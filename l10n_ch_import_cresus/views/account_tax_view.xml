<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tax_form" model="ir.ui.view">
        <field name="name">account.cresus.mapping.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='refund_repartition_line_ids']/.."
                position="after"
            >
                <group string="Crésus" name="Crésus">
                    <field name="tax_cresus_mapping" nolabel="1" colspan="2" />
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_tax_tree" model="ir.ui.view">
        <field name="name">account.tax.tree</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <field name="tax_cresus_mapping" />
            </xpath>
        </field>
    </record>
</odoo>
